{
  "name": "@golden-codex/sdk",
  "version": "1.0.0",
  "description": "Official Node.js SDK for the Golden Codex API - AI-powered image enrichment and provenance tracking",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "golden-codex",
    "ai",
    "image-processing",
    "metadata",
    "provenance",
    "art",
    "nft",
    "upscaling",
    "esrgan"
  ],
  "author": "Metavolve Labs <api@golden-codex.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codex-curator/golden-codex-api.git",
    "directory": "sdks/node"
  },
  "homepage": "https://golden-codex.com/docs/api",
  "bugs": {
    "url": "https://github.com/codex-curator/golden-codex-api/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0"
  }
}
